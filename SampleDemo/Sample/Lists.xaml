                    <CheckBox x:Name="chk_yobi7" Style="{StaticResource MaterialDesignFilterChipAccentOutlineCheckBox}" IsChecked="False" Content="日" />
                </DockPanel>
            </ScrollViewer>
            <materialDesign:PopupBox
